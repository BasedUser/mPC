set SOURCELINK "https://github.com/BasedUser/mPC"
loop:
read c cell1 0
jump ident equal c -1
jump stop equal c -2
jump start equal c -3
jump valid equal c -5
jump error equal c -4
jump code equal e 1
jump loop always
ident:
write 0 cell1 1
write 0x74657374 cell1 2
write 0 cell1 3
write 0 cell1 0
jump loop always
stop:
write 0 cell1 0
control enabled switch1 0 0 0 0
set e 0
jump loop always
start:
control enabled switch1 1 0 0 0
write 0 cell1 0
set e 1
set cm 0
set stage 0
jump loop always
valid:
write 0 cell1 0
jump loop equal stage 0
jump stage2 greaterThanEq stage 2
read ipcid cell1 1
jump allipcdone equal ipcid -1
write 3 cell1 0
set stage 2
jump loop always
stage2:
jump stage3 greaterThanEq stage 3
read spid cell1 1#is it init or kbd or termd
jump initallows equal spid 0
jump termdresp equal spid 2
jump termdresp notEqual spid 3
read anyc cell1 4#are chars available
jump nochar equal anyc 0
jump stage3 notEqual anyc 1
set stage 3
write 3 cell1 1
write 1 cell1 2
write 1 cell1 0#request char
jump loop always
stage3:
jump stage4 greaterThanEq stage 4
read char cell1 4
write char cell1 2
write 2 cell1 1
write 1 cell1 0
set cm 1
set stage 4
jump loop always
stage4:
set stage 0
jump loop always
allipcdone:
write 0 cell1 63
set stage 0
set cm 1
jump loop always
initallows:
set cm 1
set stage 0
jump loop always
termdresp:
set cm 1
set stage 0
jump loop always
nochar:
set cm 1
set stage 0
jump loop always
code:
jump loop notEqual stage 0
read ipcin cell1 63
jump handleipcin notEqual ipcin 0
jump loop equal cm 0
write 3 cell1 1
write 0 cell1 2
write 1 cell1 0#send ipc msg to kbd to check for new keys
set cm 0
jump loop always
handleipcin:
write -1 cell1 1
write 2 cell1 0
set stage 1
jump loop always
error:
write 0 cell1 0
jump loop always
